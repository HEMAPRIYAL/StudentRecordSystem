int i = 0;
struct sinfo 
{
char fname[50];
char lname[50];
char dept[20];
int roll,ph,m1,m2,m3,m4,m5,m6;
float cgpa;
} st[55]; 
void add_student()
{
printf("*********************************************************\n");
printf("\t\tAdd the Students Details\t\t\t\n");
printf("*********************************************************\n");
printf("Enter the first name of student\n");
scanf("%s", st[i].fname);
printf("Enter the last name of student\n");
scanf("%s", st[i].lname);
